@model Game2048.Models.GameBoardViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="wrapper mainContainer">


    <div id="gameBoard">
        @{await Html.RenderPartialAsync("_GameBoard", Model);} <!--Html.RenderPartial-->
    </div>

    <div id="data">
        <button type="submit" class="button" id="new-game">New Game</button>
    </div>

    <div class="buttons">
        <button type="submit" class="button swipe" id="swipe-up" value="up">up</button>
        <br />
        <button type="submit" class="button swipe" id="swipe-left" value="left">left</button>
        <button type="submit" class="button swipe" id="swipe-right" value="right" right">right</button>
        <br />
        <button type="submit" class="button swipe" id="swipe-down" value="down">down</button>
    </div>

</div>
















