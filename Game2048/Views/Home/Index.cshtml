@model Game2048.Models.GameBoardViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div class="wrapper" id="mainContainer">
    <div id="data">
        <div id="score">
            Score<br />
            <span>_</span>
        </div>
        <div id="best">
            Best <br />
            <span>_</span>
        </div>
        <button type="submit" class="button" id="new-game" onclick="NewGame()">New Game</button>
    </div>
    <form method="post">

        <table id="game-matrix">
            <tbody>
                @for (int i = 0; i < Model.BoardSize; i++)
                {
                    <tr>
                        @for (int j = 0; j < Model.BoardSize; j++)
                        {
                            <td class="box">
                                <div class="content">
                                    @if (@Model.Matrix[i, j] != 0)
                                    {
                                        @Model.Matrix[i, j]
                                    }
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </form>
    

    <div id="buttons">
        <button type="submit" class="button" onclick="SwipeUp()">up</button>
        <br />
        <button type="submit" class="button" onclick="SwipeLeft()">left</button>
        <button type="submit" class="button" onclick="SwipeRight()">right</button>
        <br />
        <button type="submit" class="button" onclick="SwipeDown()">down</button>
    </div>
</div>
